<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quan"
        android:layout_margin="@dimen/medd"
        android:textAllCaps="true"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="@dimen/medd"
        android:layout_marginBottom="@dimen/medd"
        android:textSize="@dimen/meds"
        android:textColor="@color/blck"
        android:id="@+id/quantity_text_view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medd"
        android:text="@string/but"
        android:onClick="submitOrder"/>

</LinearLayout>